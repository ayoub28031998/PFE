@model ComptabilitePFE.Journal

@{
    ViewBag.Title = "Details";
}

<br />
<div>
    <div class="card card-info   mx-auto" style="width:60%">
        <div class="card-header">
            <h3 class="card-title"><b>Journal/Detail</b></h3>
            <a href="@Url.Action("Index","Journals")" class="btn btn-tool mt-0" style="float:right"><i class="fas fa-times"></i></a>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CodeSociete)

            @Html.HiddenFor(model => model.CodeJournal)
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.CodeJournal, htmlAttributes: new { @class = "control-label col-md-12" })
                        </div>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.CodeJournal, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.CodeJournal, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Libelle, htmlAttributes: new { @class = "control-label col-md-12" })
                        </div>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Libelle, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.Libelle, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    &nbsp;
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="checkbox">
                                @Html.DisplayFor(model => model.Ouverture)
                            </div>
                        </div>
                        <div class="col-md-8">
                            @Html.LabelFor(model => model.Ouverture, htmlAttributes: new { @class = "control-label col-md-12" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="checkbox">
                                @Html.DisplayFor(model => model.Tresorerie)
                            </div>
                        </div>
                        <div class="col-md-8">
                            @Html.LabelFor(model => model.Tresorerie, htmlAttributes: new { @class = "control-label col-md-12" })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-10">
                                <b>Autoriser controle</b>
                            </div>
                            <div class="col-md-2">
                                <div class="checkbox">
                                    @Html.DisplayFor(model => model.AutoriserControle)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-sm-8">
                            <b>Numero du compte</b>
                        </div>
                        <div class="col-sm-4">
                            @Html.DisplayFor(model => model.NumeroCompte)
                        </div>
                    </div>
                </div>


            </div>

        </div>

        <div class="card-footer">
            <a href="@Url.Action("Edit","Journals", new { id = Model.CodeJournal, cs = Model.CodeSociete })" class="btn btn-outline-warning">Edit</a>
       
        </div>
    </div>
</div>

