@model ComptabilitePFE.Journal

@{
    ViewBag.Title = "Delete";
}

<div>
    <h4>Journal</h4>
    <hr />
    <div class="card card-danger cardWidth mx-auto">
        <div class="card-header">
            <h3 class="card-title"><b>Delete</b></h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <div class="card-body">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.CodeJournal, htmlAttributes: new { @class = "control-label col-md-12" })
                        </div>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.CodeJournal, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CodeJournal, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Libelle, htmlAttributes: new { @class = "control-label col-md-12" })
                        </div>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Libelle, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Libelle, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="checkbox">
                                @Html.DisplayFor(model => model.Ouverture)
                            </div>
                        </div>
                        <div class="col-md-8">
                            @Html.LabelFor(model => model.Ouverture, htmlAttributes: new { @class = "control-label col-md-12" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="checkbox">
                                @Html.DisplayFor(model => model.Tresorerie)
                            </div>
                        </div>
                        <div class="col-md-8">
                            @Html.LabelFor(model => model.Tresorerie, htmlAttributes: new { @class = "control-label col-md-12" })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-10">
                                <b>Autoriser controle</b>
                            </div>
                            <div class="col-md-2">
                                <div class="checkbox">
                                    @Html.DisplayFor(model => model.AutoriserControle)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col">
                            <b>Numero du compte</b>
                        </div>
                        <div class="col">
                            <select class="form-select form-select-lg" aria-label=".form-select-lg example">
                                <option selected>Open this select menu</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>
                </div>


            </div>

        </div>
        <div class="card-footer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-outline-danger" />
                    <a href="@Url.Action("Index","Journals")" class="btn btn-outline-secondary">BackToList</a>
                </div>
            }
        </div>
    </div>

      
    </div>
