@model PieceComptable

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    if (TempData["AlertEx"] != null)
    {

        <div class="alert alert-default-danger">
            <strong>Success !</strong>@TempData["AlertEx"]
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
        </div>
    }
  
<div class="card card-success  mx-auto">
    <form>
        <div class="card-header">
            <div class="row">
                <h1 class="card-title">Piece comptable/Create</h1>
                <a href="@Url.Action("Index","pieceComptables")" class="btn btn-tool ml-auto"><i class="fas fa-times"></i></a>
            </div>
         
           

        </div>
        <!-- /.card-header -->
        <!-- form start -->

        <div class="card-body">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group  col-md-2">
                    @Html.LabelFor(model => model.CodePiece, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.CodePiece, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CodePiece, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-10">
                    @Html.LabelFor(model => model.LibelleEcriture, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.LibelleEcriture, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LibelleEcriture, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
           

            <div class="row">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.CodeJournal, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">

                        @Html.DropDownListFor(model => model.CodeJournal, (IEnumerable 
                       <SelectListItem>)ViewData["ListJournals"], "--Select journal--", new { @class = "form-control"})
                        @Html.ValidationMessageFor(model => model.CodeJournal, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group  col-md-4 ">
                    @Html.LabelFor(model => model.DateEcriture, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DateEcriture, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.DateEcriture, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.TotalPiece, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TotalPiece, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TotalPiece, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
           <br /><br />
